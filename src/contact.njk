                        <div class="col-span-6" x-data="{ count: 0 }">
                          <label for="about" class="block flex justify-between text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200">
                          Message
                          <span class="text-gray-500 dark:text-gray-200" x-text="`${count} of max. 250 words`"></span>
                          </label>
                          <div class="mt-1">
                            <textarea x-model.number="messageText" @input="count = messageText.split(' ').length" required id="about" name="about" rows="5" class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm" placeholder=""></textarea>
                            <p class="mt-2 text-sm text-gray-500 dark:text-gray-200">Please mention your budget and your deadline.</p>
                          </div>
                        </div>
                        <div class="col-span-6 md:col-span-3" x-data="{ n1: Math.round(Math.random() * 10), n2: Math.round(Math.random() * 10) }">
                          <label for="challenge" class="block flex justify-between text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200">
                            <span>Question</span>
                            <span class="text-gray-500 dark:text-gray-200" x-text="`${n1} + ${n2} = ?`"></span>
                          </label>
                          <input x-model.number="inputText" @input="disableSubmit = inputText !== (n1 + n2)" required type="text" name="challenge" id="challenge" autocomplete="subject" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
                      </div>
                    </div>
                    <!-- <div class="px-4 py-3 md:px-6" data-netlify-recaptcha="true"
                                  ></div> -->
                    <div class="px-4 py-3 text-right md:px-6">
                      <button :disabled="disableSubmit" :class="{'opacity-50': disableSubmit}" type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Send</button>
