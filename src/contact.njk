          </div>
          <div class="m-5 dark:bg-gray-900 md:w-3/5" x-show="showContact" x-transition:enter="transition transform ease-in-out duration-[2000ms] " x-transition:enter-start="translate-x-full" x-transition:enter-end="translate-x-0">
            <div class="mt-10 dark:bg-gray-900 md:mt-0">
              <div class="mt-5 dark:bg-gray-900 md:mt-0" x-data="{ disableSubmit: true, inputText: null, messageText: null }">
                <form @submit.prevent="registerEvent('contact', 'click'); handleSubmit($event)"
                action="/api/forms"
                x-data="form"
                x-ref="supaform"
                method="POST"
                name="contact"
              >
                  <div class="dark:bg-gray-900">
                    <div class="bg-white px-4 py-5 dark:bg-gray-900 md:p-6">
                      <div class="grid grid-cols-6 gap-6">
                        <div class="col-span-6 md:col-span-3">
                          <label for="first_name" class="block text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200"> First name </label>
                          <input required type="text" name="first_name" id="first_name" autocomplete="given-name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
                        <div class="col-span-6 md:col-span-3">
                          <label for="last_name" class="block text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200"> Last name </label>
                          <input required type="text" name="last_name" id="last_name" autocomplete="family-name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
                        <div class="col-span-6 md:col-span-3">
                          <label for="email_address" class="block text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200"> Email </label>
                          <input required type="email" name="email_address" id="email_address" autocomplete="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
                        <div class="col-span-6 md:col-span-3">
                          <label for="phone" class="block flex justify-between text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200">
                          Phone
                          <span class="text-gray-500 dark:text-gray-200"> Optional </span>
                          </label>
                          <input type="text" name="phone" id="phone" autocomplete="phone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
                        <div class="col-span-6">
                          <label for="subject" class="block text-sm font-medium text-gray-700 dark:bg-gray-900 dark:text-gray-200"> Subject </label>
                          <input required type="text" name="subject" id="subject" autocomplete="subject" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 md:text-sm"/>
                        </div>
