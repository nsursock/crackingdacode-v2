<!-- This example requires Tailwind CSS v2.0+ -->
<div x-data="{ environment: '{{ env.environment }}', supabaseUrl: '{{ env.supaUrl }}', supabaseKey: '{{ env.supaKey }}' }" x-show="showCommentsPanel" 
class="relative z-50" x-cloak aria-labelledby="slide-over-title" role="dialog" aria-modal="true">
  <!-- Background backdrop, show/hide based on slide-over state.
    
    Entering: "ease-in-out duration-500"
        From: "opacity-0"
        To: "opacity-100"
    Leaving: "ease-in-out duration-500"
        From: "opacity-100"
        To: "opacity-0" -->
  <div x-show="showCommentsPanel" x-transition:enter="ease-in-out duration-500 " x-transition:enter-start="opacity-0 " x-transition:enter-end="opacity-100  " x-transition:leave="ease-in-out duration-500 " x-transition:leave-start="opacity-100 " x-transition:leave-end="opacity-0 " class="fixed inset-0 bg-gray-500 bg-opacity-75 backdrop-blur-sm backdrop-filter transition-opacity"></div>
  <div class="fixed inset-0 overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="pointer-events-none fixed inset-y-0 right-0 flex max-w-full pl-10">
        <!-- Slide-over panel, show/hide based on slide-over state.
                
                Entering: "transform transition ease-in-out duration-500 sm:duration-700"
                    From: "translate-x-full"
                    To: "translate-x-0"
                Leaving: "transform transition ease-in-out duration-500 sm:duration-700"
                    From: "translate-x-0"
                    To: "translate-x-full" -->
        <div x-data="comments" x-show="showCommentsPanel" x-transition:enter="transform transition ease-in-out duration-500 sm:duration-700 " x-transition:enter-start="translate-x-full " x-transition:enter-end="translate-x-0 " x-transition:leave="transform transition ease-in-out duration-500 sm:duration-700 " x-transition:leave-start="translate-x-0 " x-transition:leave-end="translate-x-full " class="pointer-events-auto w-screen max-w-md lg:max-w-xl">
          <div class="flex h-full flex-col divide-y divide-gray-200 bg-white shadow-xl dark:divide-gray-800 dark:bg-gray-900">
            <div class="flex min-h-0 flex-1 flex-col overflow-y-scroll py-6">
              <div class="px-4 sm:px-6">
                <div class="flex items-start justify-between">
                  {#
                  <h2 class="text-lg font-medium text-gray-900 dark:text-gray-400" id="slide-over-title">
                    Comments (
                    <span x-text="count"></span>
                    )
                  </h2>
                  #}

                  <!--
                    This example requires Tailwind CSS v2.0+ 
                    
                    This example requires some changes to your config:
                    
                    ```
                    // tailwind.config.js
                    module.exports = {
                      // ...
                      plugins: [
                        // ...
                        require('@tailwindcss/forms'),
                      ],
                    }
                    ```
                  -->
                  <div>
                    <div class="sm:hidden">
                      <label for="tabs" class="sr-only">Select a tab</label>
                      <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
                      <select @change="tab = $event.target.value.toLowerCase()" id="tabs" name="tabs" class="dark:bg-gray-850 dark:text-gray-300 dark:border-gray-800 block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
                        <option>Ratings</option>
                        <option selected>Comments</option>
                      </select>
                    </div>
                    <div class="hidden w-80 sm:block">
                      <div class="border-b border-gray-200 dark:border-gray-600">
                        <nav class="-mb-px flex" aria-label="Tabs">
                          <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
                          <a href="#" @click.prevent="tab = 'ratings'" :class="tab === 'ratings' ? 'border-indigo-500 text-indigo-600 hover:text-indigo-700 hover:border-indigo-300' : 'hover:border-gray-300 dark:hover:border-gray-500 hover:text-gray-700 dark:hover:text-gray-600'" class="flex-1 border-b-2 border-transparent py-4 px-1 text-center text-sm font-medium text-gray-500"> Ratings </a>

                          <a href="#" @click.prevent="tab = 'comments'" :class="tab === 'comments' ? 'border-indigo-500 text-indigo-600 hover:text-indigo-700 hover:border-indigo-300' : 'hover:border-gray-300 dark:hover:border-gray-500 hover:text-gray-700 dark:hover:text-gray-600'" class="flex-1 border-b-2 border-transparent py-4 px-1 text-center text-sm font-medium text-gray-500"> Comments </a>
                        </nav>
                      </div>
                    </div>
                  </div>

                  <div class="ml-3 flex h-7 items-center">
                    <button @click="showCommentsPanel = !showCommentsPanel" type="button" class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-gray-900">
                      <span class="sr-only">Close panel</span>
                      <!-- Heroicon name: outline/x -->
                      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>

              <div x-show="tab === 'ratings'" class="relative mt-6 flex-1 px-4 sm:px-6">
                {# {% include './star-rating.njk' %} #}
                <div class="flex h-full flex-col items-center justify-center text-center">
                  <svg aria-hidden="true" class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>

                  <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">In progress</h3>
                  <p class="mt-1 text-sm text-gray-500">Soon you will be able to rate an article.</p>
                </div>
              </div>

              <div
                x-show="tab === 'comments'"
                class="relative mt-6 flex-1 px-4 sm:px-6"
              >
                <!-- Replace with your content -->
                <div class="mb-4">
                  <label for="sort-by" class="block text-sm font-medium text-gray-700 dark:text-gray-400">Sort By</label>
                  <select x-ref="sortdir" @change="sortItems($event.target.value.toLowerCase())" id="sort-by" name="sort-by" class="mt-1 block w-full rounded-md border-gray-300 dark:bg-gray-850 dark:text-gray-300 dark:border-gray-800 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm">
                    <option selected>Newest</option>
                    <option>Oldest</option>
                  </select>
                </div>

                <template x-if="count === 0">
                  <!-- This example requires Tailwind CSS v2.0+ -->
                  <div class="flex h-full flex-col items-center justify-center text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No comments</h3>
                    <p class="mt-1 text-sm text-gray-500">Be the first to comment.</p>
                  </div>
                </template>
                {#
                <div class="h-full border-2 border-dashed border-gray-200 dark:border-gray-800" aria-hidden="true"></div>
                #}
                <template x-if="count !== 0">
                  <!-- This example requires Tailwind CSS v2.0+ -->
                  <div>
                    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-800">
                      <template x-for="item in sortedItems">
                        <li class="py-4">
                          <div class="flex space-x-3">
                            <template x-if="!item.author.avatar">
                              <svg class="h-6 w-6 rounded-full border dark:border-gray-200 dark:text-gray-300 text-gray-700 border-gray-800" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"/>
                              </svg>
                            </template>
                            <template x-if="item.author.avatar">
                              <img x-data="{ url: new URL(item.author.avatar).pathname.replace('/storage/v1/object/public/', '') }"
                                class="h-6 w-6 rounded-full object-cover" :src="`https://crdacode.imgix.net/${url}?fit=facearea&facepad=2&h=50&w=50&fm=webp`" alt="">
                            </template>
                            <div class="flex-1 space-y-1">
                              <div class="flex items-center justify-between sm:flex-row">
                                <h3 class="text-sm font-medium dark:text-white">
                                  <span x-text="`${item.author.user_name}`"></span>
                                </h3>
                                <p class="text-sm text-gray-500">
                                  <span x-text="$store.utils.formatDate(new Date(item.created_at), 'MMM dd, yyyy') + ' at ' + $store.utils.formatDate(new Date(item.created_at), 'kk:mm')"></span>
                                </p>
                              </div>
                              <p class="text-sm text-gray-500">
                                <span x-text="item.content"></span>
                              </p>
                            </div>
                          </div>
                        </li>
                      </template>
                      <!-- More items... -->
                    </ul>
                  </div>
                </template>
                <!-- /End replace -->
              </div>
            </div>
            <div x-show="tab === 'comments'" class="px-4 py-4">
              <!-- This example requires Tailwind CSS v2.0+ This example requires some changes to your config: ``` //
                                tailwind.config.js module.exports = {
                                    // ...
                                    plugins: [
                                      // ...
                                      require('@tailwindcss/forms'),
                                    ],
                                } ``` -->
              <div class="">
                <label for="comment" class="block text-sm font-medium text-gray-700 dark:text-gray-400"> Add your comment </label>
                <div class="mt-1">
                  <textarea x-model="comments" :rows="!$store.auth.user ? 1 : 4" name="comment" id="comment" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:border-gray-800 dark:bg-gray-850 dark:text-gray-400 sm:text-sm"></textarea>
                  <p class="mt-2 text-sm text-gray-500 dark:text-gray-200">
                    <template x-if="!$store.auth.user">
                      <span>You must authenticate before posting</span>
                    </template>
                    <template x-if="$store.auth.user">
                      <span x-text="'Logged in as ' + $store.auth.user?.user_name"></span>
                    </template>
                  </p>
                </div>
              </div>
              <div class="flex flex-shrink-0 justify-end py-4">
                <template x-if="$store.auth.user">
                  <button @click="localStorage.removeItem('crdacode_token'); $store.auth.user = null" type="button" class="ml-4 rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:border-gray-700 dark:bg-gray-850 dark:text-gray-400">Log Out</button>
                </template>
                <template x-if="!$store.auth.user">
                  <div>
                    <button @click="showCommentsPanel = false; showAuthSignupModal = true" type="button" class="rounded-md border border-gray-300 bg-white py-2 px-3 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:border-gray-700 dark:bg-gray-850 dark:text-gray-400">Sign Up</button>
                    <button @click="showCommentsPanel = false; showAuthLoginModal = true" type="button" class="rounded-md border border-gray-300 bg-white py-2 px-3 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:border-gray-700 dark:bg-gray-850 dark:text-gray-400">Log In</button>
                  </div>
                </template>
                <button @click="submit" type="submit" :disabled="!$store.auth.user || isFetching || comments === ''" :class="{ 'opacity-50': !$store.auth.user || isFetching || comments === '' }" class="ml-2 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                  <span
                    class="flex items-center justify-center">
                    <svg
                      x-show="!isFetching"
                      class="mr-2 h-5 w-5 text-indigo-500 group-hover:text-indigo-400"
                      xmlns="http://www.w3.org/2000/svg"
                      viewbox="0 0 20 20"
                      fill="currentColor"
                      aria-hidden="true">
                      <path
                        fill-rule="evenodd"
                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                        clip-rule="evenodd"/>
                    </svg>
                    <svg
                      x-show="isFetching"
                      class="mr-2 animate-spin h-5 w-5 text-white"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewbox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path
                        class="opacity-75"
                        fill="currentColor"
                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  Submit
                  </span>
                </button>
              </div>
            </div>
          </div>
          {# {% include 'partials/notifications.njk' %} #}
          <template x-teleport="body">
            <div>
            {% include 'partials/auth/login.njk' %}
            {% include 'partials/auth/signup.njk' %}
            </div>
          </template>
        </div>
      </div>
    </div>
  </div>
</div>
