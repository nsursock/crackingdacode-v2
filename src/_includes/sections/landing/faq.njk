<section id="faq" aria-labelledby="faq-title"
class="dark:bg-gray-900 dark:text-gray-200 relative overflow-hidden py-20 sm:py-32"
  x-data="{ isInViewport: false }"
  x-intersect.once="isInViewport = !isInViewport"
>
  <div x-cloak x-show="isInViewport" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 id="faq-title" class="font-display text-3xl tracking-tight text-slate-900 sm:text-4xl">Frequently asked questions</h2>
      <p class="mt-4 text-lg tracking-tight text-slate-700">If you can’t find what you’re looking for, contact our support team and someone will get back to you.</p>
    </div>
    <ul role="list" class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 lg:max-w-none lg:grid-cols-3">
      {% for chunk in faq.faq | batch((faq.faq.length / 3) | round) %}
        <li>
          <ul role="list" class="flex flex-col gap-y-8">
            {% for item in chunk %}
              <li>
                <h3 class="font-display text-lg leading-7 text-slate-900">{{ item.question }}</h3>
                <p class="mt-4 text-sm text-slate-700">{{ item.answer }}</p>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>