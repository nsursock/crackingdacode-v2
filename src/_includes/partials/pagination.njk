<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="mt-5 border-t border-gray-200 dark:border-gray-700 px-4 flex items-center justify-between sm:px-0">
  <div class="-mt-px w-0 flex-1 flex justify-end">
    {% if pagination.href.previous %}
      <a
              href="{{ pagination.href.previous }}" class="border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300">
        <!-- Heroicon name: solid/arrow-narrow-left -->
        <svg
                class="mr-3 h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true">
          <path
                  fill-rule="evenodd"
                  d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1
                    1 0 010 1.414z"
                  clip-rule="evenodd"/>
        </svg>
              Prev
            </a>
    {% endif %}
    {% if page.url != pagination.href.first %}
      <a href="{{ pagination.href.first }}" class="ml-2 border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300">
              First
            </a>
    {% endif %}
  </div>
  <div class="hidden md:-mt-px md:flex">
    {% for page_entry in pagination.pages %}
      {%- set page_url = pagination.hrefs[loop.index0] -%}
      {% if loop.index0 == + page
        .url
        .split('/')[2] - 4 %}
        <a href="{{ pagination.hrefs[+page.url.split('/')[2] -3] }}" class="border-transparent text-gray-500 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium"> ... </a>
      {% endif %}
      {% if loop.index0 >= + page
        .url
        .split('/')[2] - 3 and loop
        .index0 <= + page
        .url
        .split('/')[2] + 3 %}
        <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700
            dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300" -->
        <a href="{{ page_url }}" {% if page.url == page_url %} class="border-indigo-500 text-indigo-600 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" {% endif %} class="border-transparent text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" aria-current="page">
          {{ loop.index }}
        </a>
      {% endif %}
      {% if loop.index0 == + page
        .url
        .split('/')[2] + 4 %}
        <a href="{{ pagination.hrefs[+page.url.split('/')[2] +3] }}" class="border-transparent text-gray-500 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium"> ... </a>
      {% endif %}
    {% endfor %}
  </div>
  <div class="-mt-px w-0 flex-1 flex ">
    {% if page.url != pagination.href.last %}
      <a href="{{ pagination.href.last }}" class="mr-2 border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300">
              Last
            </a>
    {% endif %}
    {% if pagination.href.next %}
      <a href="{{ pagination.href.next }}" class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:text-gray-700 dark:hover:text-gray-300 dark:hover:border-gray-700 hover:border-gray-300">
              Next
              <!-- Heroicon name: solid/arrow-narrow-right -->
        <svg
                class="ml-3 h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true">
          <path
                  fill-rule="evenodd"
                  d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0
                    110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"/>
        </svg>
      </a>
    {% endif %}
  </div>
</nav>