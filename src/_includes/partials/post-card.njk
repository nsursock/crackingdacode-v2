<li x-data="{ type: '#{{ loop.index }}' }"
  x-show="showArticle"
  x-transition:enter="animate-popin"
  class="snap-center shadow-lg border border-gray-100 dark:border-gray-800 rounded-lg max-w-sm h-full mx-auto bg-gray-50 dark:bg-gray-850
     group transform transition duration-500 ease-in-out hover:scale-105 active:scale-105 "
  :class="typeof isTopList !== 'undefined' && isTopList ? 'sm:last:hidden lg:last:block' : ''">
  <a href="{{ post.url }}" aria-label="Read more about: {{ post.data.title }}">
    <div class="relative">
      <div class="relative" x-data="{ isDalle: {{ post.data.tags | json }}.includes('dalle') }">
        <!--
          loading="lazy" src="https://images.unsplash.com/photo-1529917365646-d9b0d968d713?q=80&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=480&h=320"
          -->
        <img loading="lazy"
          width="480" :height="isDalle ? '275' : '320'" class="rounded-t-lg transition-all duration-500 ease-in-out" 
          :class="typeof type !== 'undefined' && '{{ loop.length }}' === 3 ? 'group-hover:filter group-hover:blur-md' : ''" 
          :data-src="isDalle ? 
            `{{ post.data.featured }}`.replace('/upload/', '/upload/w_480/h_275/f_webp/') : 
            `{{ post.data.featured }}&w=480&h=320`" 
          :alt="`{{ post.data.alt }}`" 
          x-intersect.once="showArticle = true; $el.src = $el.dataset.src"/>
        <template x-if="typeof type !== 'undefined' && '{{ loop.length }}' === 3">
          <div
            class=" absolute inset-0 bg-gray-500 bg-opacity-0 group-hover:bg-opacity-50 group-focus:bg-opacity-50 transition-all
              ease-in-out duration-500 rounded-t-lg "
            aria-hidden="true"/>
        </template>
      </div>
      <template x-if="typeof type !== 'undefined' && '{{ loop.length }}' === 3">
        <div class=" absolute inset-0 flex items-center justify-center max-w-3xl text-8xl font-black text-white opacity-0
            group-hover:opacity-80 group-focus:opacity-80 filter blur-lg group-hover:filter-none group-focus:filter-none
            transition-all ease-in-out duration-[2000ms] mix-blend-overlay ">
          <span x-text="type"></span>
        </div>
      </template>
    </div>
    <div class="flex flex-col p-7 divide-y divide-gray-300 dark:divide-gray-700 justify-between ">
      <div class="flex flex-col ">
        <h2 class=" text-sm text-indigo-600 font-semibold tracking-wide uppercase text-center ">
          {{ post.data.tags[0] }}
        </h2>
        <p class="hover:line-clamp-none line-clamp-2  mt-2 text-lg leading-6 font-bold tracking-tight text-gray-900 sm:text-xl dark:text-white ">
          {{ post.data.title }}
        </p>
        <p class="hover:line-clamp-none line-clamp-4  mt-4 max-w-2xl text-md text-gray-500 lg:mx-auto dark:text-gray-400 ">
          {{ post.data.description }}
        </p>
      </div>
      <div class="mt-4 pt-4 flex items-center">
        {% for auth in authors.authors %}
          {% if auth.name == post.data.author %}
            <img class="h-12 w-12 rounded-full" data-src="{{ auth.photo }}-small.jpg" alt="Photo of {{ auth.name }}" x-intersect.once="$el.src = $el.dataset.src"/>
            <div class="ml-3 flex flex-col">
              <span class="text-sm font-semibold dark:text-white">
                {{ auth.name }}
              </span>
              <span
                class="text-sm text-gray-500 dark:text-gray-400"
                x-data="{ time: {{ post.templateContent.split(' ').length / 238 }} }">
                {{ post.data.date | format('MMM dd, yyyy') }} â€¢
                <span x-text="`${Math.round(time).toString().split('.')[0]} min read`"/>
              </span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
