<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    <!-- Add any common styles or meta tags here -->
    <link rel="dns-prefetch" href="https://unsplash.com">
    <link rel="preconnect" href="https://unsplash.com">
    <link rel="preload" href="/assets/fonts/aldrich/aldrich-v17-latin-regular.ttf" as="font" crossorigin/>

    <link rel="preload" fetchpriority="high" as="image" href="/assets/images/hero-index.webp" media="(max-width: 799px)">
    <link rel="preload" fetchpriority="high" as="image" href="/assets/images/hero-index-desktop.webp" media="(min-width: 800px)">

    {% for post in collections.posts | latest %}
      <link rel="preload" href="{{ post.data.featured }}&w=480&h=320&fm=webp" as="image">
    {% endfor %}
    {% for post in collections.posts | top %}
      <link rel="preload" href="{{ post.data.featured }}&w=480&h=320&fm=webp" as="image">
    {% endfor %}

    <link rel="stylesheet" href="/assets/main.bundle.css">
    <script type="module" src="/assets/main.bundle.js" defer></script>
    <script>
      if (localStorage.crdacode_theme === 'dark' || (!('crdacode_theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document
          .documentElement
          .classList
          .add('dark')
      } else {
        document
          .documentElement
          .classList
          .remove('dark')
      }
    </script>
    <style>
      [x-cloak] {
        display: none !important;
      }
      audio {
        display: none !important;
      }
    </style>
  </head>
  <body class="{{ 'debug-screens' if env.devMode }}">
    {{ content | safe }}
  </body>

  {% include "../footer.njk" %}
</html>